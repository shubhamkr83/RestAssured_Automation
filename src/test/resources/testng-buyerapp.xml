<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Buyer App API Automation Test Suite" preserve-order="true">

    <listeners>
        <listener class-name="com.automation.listeners.TestListener"/>
    </listeners>

    <parameter name="env" value="default"/>

    <!-- All Buyer App Tests - Single test block to ensure ThreadLocal token sharing -->
    <test name="Buyer App All Tests" preserve-order="true">
        <classes>
            <!-- Login Tests - MUST run first -->
            <class name="com.automation.tests.buyerapp.Login.LoginTest"/>
            
            <!-- HomePage Tests -->
            <class name="com.automation.tests.buyerapp.HomePage.BannersTest"/>
            <class name="com.automation.tests.buyerapp.HomePage.CatalogFeedTest"/>
            <class name="com.automation.tests.buyerapp.HomePage.ContinueYourJourneyTest"/>
            <class name="com.automation.tests.buyerapp.HomePage.FeaturedCollectionTest"/>
            <class name="com.automation.tests.buyerapp.HomePage.FeedFilterSaveTest"/>
            <class name="com.automation.tests.buyerapp.HomePage.FeedFilterTest"/>
            <class name="com.automation.tests.buyerapp.HomePage.NewThisWeekTest"/>
            <class name="com.automation.tests.buyerapp.HomePage.TrendingTest"/>
            
            <!-- Collection Listing Tests -->
            <class name="com.automation.tests.buyerapp.CollectionListing.TopCollectionTest"/>
            <class name="com.automation.tests.buyerapp.CollectionListing.AllCollection.CollectionAllForReadymadeTest"/>
            <class name="com.automation.tests.buyerapp.CollectionListing.AllCollection.CollectionAllForSareeTest"/>
            <class name="com.automation.tests.buyerapp.CollectionListing.AllCollectionCounts.CollectionCountsForReadymadeTest"/>
            <class name="com.automation.tests.buyerapp.CollectionListing.AllCollectionCounts.CollectionCountsForSareeTest"/>
            <class name="com.automation.tests.buyerapp.CollectionListing.SimilarCollection.SimilarCollectionForReadymadeTest"/>
            <class name="com.automation.tests.buyerapp.CollectionListing.SimilarCollection.SimilarCollectionForSareeTest"/>
            
            <!-- Search Tests -->
            <class name="com.automation.tests.buyerapp.SearchPage.SearchProductTest"/>
            <class name="com.automation.tests.buyerapp.SearchPage.SearchRecommendedChipsTest"/>
            <class name="com.automation.tests.buyerapp.SearchPage.SearchRecommendChipSelectTest"/>
            
            <!-- Profile & Config Tests -->
            <class name="com.automation.tests.buyerapp.ProfilePage.AppUpdateTest"/>
            <class name="com.automation.tests.buyerapp.ProfilePage.AuthValidateTest"/>
            <class name="com.automation.tests.buyerapp.ProfilePage.UserProfileTest"/>
            <class name="com.automation.tests.buyerapp.ProfilePage.VideoViewActionTest"/>
            <class name="com.automation.tests.buyerapp.ProfilePage.WatchedVideosTest"/>
            
            <!-- Product Detail Page Tests -->
            <class name="com.automation.tests.buyerapp.PDP.PdpSimilarTest"/>
            <class name="com.automation.tests.buyerapp.ProductPage.ProductSimilarCollectionTest"/>
            
            <!-- Catalog & Cart Tests -->
            <class name="com.automation.tests.buyerapp.CatalogByIdTest"/>
            <class name="com.automation.tests.buyerapp.SuitableForConfigTest"/>
            <class name="com.automation.tests.buyerapp.UpdateCartTest"/>
            <class name="com.automation.tests.buyerapp.VideoFeedTvTest"/>
        </classes>
    </test>

</suite>
