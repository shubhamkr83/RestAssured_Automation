<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="API Automation Test Suite" parallel="classes" thread-count="3">

    <listeners>
        <listener class-name="com.automation.listeners.TestListener"/>
    </listeners>

    <parameter name="env" value="default"/>

    <test name="User API Tests">
        <classes>
            <class name="com.automation.tests.UserApiTest"/>
        </classes>
    </test>

    <test name="Post API Tests">
        <classes>
            <class name="com.automation.tests.PostApiTest"/>
        </classes>
    </test>

    <test name="Schema Validation Tests">
        <classes>
            <class name="com.automation.tests.SchemaValidationTest"/>
        </classes>
    </test>

</suite>
