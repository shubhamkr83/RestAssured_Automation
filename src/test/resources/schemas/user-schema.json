{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "User Schema",
  "description": "JSON Schema for User API response validation",
  "type": "object",
  "required": ["id", "name", "username", "email"],
  "properties": {
    "id": {
      "type": "integer",
      "description": "Unique identifier for the user"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Full name of the user"
    },
    "username": {
      "type": "string",
      "minLength": 1,
      "description": "Username of the user"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "Email address of the user"
    },
    "phone": {
      "type": "string",
      "description": "Phone number of the user"
    },
    "website": {
      "type": "string",
      "description": "Website URL of the user"
    },
    "address": {
      "type": "object",
      "properties": {
        "street": { "type": "string" },
        "suite": { "type": "string" },
        "city": { "type": "string" },
        "zipcode": { "type": "string" },
        "geo": {
          "type": "object",
          "properties": {
            "lat": { "type": "string" },
            "lng": { "type": "string" }
          }
        }
      }
    },
    "company": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "catchPhrase": { "type": "string" },
        "bs": { "type": "string" }
      }
    }
  }
}
